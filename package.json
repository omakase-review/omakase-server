{
    "name": "omakase-server",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "prepare": "husky install",
        "build": "npx ttsc",
        "start": "node dist/index.js",
        "start:dev": "npx prisma migrate dev && node dist/index.js",
        "start:w": "nodemon --watch src/** --ext ts,json --ignore src/**/*.spec.ts --exec ts-node ./src/index.ts",
        "lint": "eslint ./src",
        "lint:es:fix": "eslint --ext js --ext ts './' --fix",
        "prettier": "prettier --write src/**/*.ts",
        "prettier:fix": "prettier --write src/**/*.ts --fix",
        "lint-staged": "lint-staged",
        "db:generate": "npx prisma generate",
        "db:migrate": "prisma migrate dev",
        "db:push": "npx prisma db push"
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ]
    },
    "bin": {
        "omakase": "./dist/index.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/omakase-review/omakase-server.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/omakase-review/omakase-server/issues"
    },
    "homepage": "https://github.com/omakase-review/omakase-server#readme",
    "dependencies": {
        "@prisma/client": "^4.8.1",
        "@types/node": "^18.11.9",
        "axios": "^1.2.1",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "jsonwebtoken": "^8.5.1",
        "multer": "^1.4.5-lts.1",
        "passport": "^0.6.0",
        "passport-kakao": "^1.0.1",
        "redis": "^4.5.1",
        "ts-node": "^10.9.1",
        "ttypescript": "^1.5.13",
        "typescript": "^4.8.4",
        "typescript-json": "^3.3.23",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.14",
        "@types/express-session": "^1.17.5",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/multer": "^1.4.7",
        "@types/passport": "^1.0.11",
        "@types/passport-kakao": "^1.0.0",
        "@typescript-eslint/eslint-plugin": "^5.40.0",
        "@typescript-eslint/parser": "^5.40.0",
        "eslint": "^8.25.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "prisma": "^4.5.0",
        "xlsx": "^0.18.5"
    }
}
